#!/bin/bash

# Define source and destination paths
SOURCE_DIR="$HOME/.shortcuts"
DEST_DIR="$HOME/termux-backup"

# Define the commit message
COMMIT_MSG="Automated backup of .shortcuts"

# Copy contents from source to destination, overwriting existing files
cp -r "$SOURCE_DIR"/* "$DEST_DIR"/

# Navigate to the backup directory
cd "$DEST_DIR"

# Add all changed files to the staging area
git add .

# Commit the changes (only if there are changes)
git commit -m "$COMMIT_MSG"

# Push the changes to the remote repository
git push

echo "Backup and push complete."